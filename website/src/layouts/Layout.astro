---
interface Props {
	title: string;
}

const { title } = Astro.props;
import '../styles/normalize.css'
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Harvest, by Hack Club & Girl Scouts of the Green and White Mountains" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<script>
			window.va = window.va || function () { (window.vaq = window.vaq || []).push(arguments); };
		</script>
		<script defer src="/_vercel/insights/script.js"></script>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--background: hsla(36, 51%, 94%, 1);
		--primary: hsla(29, 94%, 54%, 1);
		--accent: hsla(0, 0%, 0%, 0.67)
	}

	@font-face {
		font-family: "Wack Club Sans";
		src: url("/fonts/WackClubSans-Regular.ttf");
	}

	@font-face {
		font-family: "Indie Flower";
		src: url("/fonts/IndieFlower-Regular.ttf");
	}



	html {
		font-family: system-ui, sans-serif;
		background: var(--background);
	}

	body {
		overflow-x: clip;
	}

	* {
		font-weight: 400;
	}
</style>
